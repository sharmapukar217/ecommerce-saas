{
  "name": "ecommerce-saas",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "next start",
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:staging": "next build --turbopack &&  storybook build --output-dir public/sb",
    "format": "prettier -uw .",
    "lint": "eslint --fix --cache src",
    "storybook:dev": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "flowbite-react-icons": "^1.3.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/compat": "^1.3.0",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.0.11",
    "@storybook/addon-docs": "^9.0.11",
    "@storybook/addon-themes": "^9.0.11",
    "@storybook/addon-vitest": "^9.0.11",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/nextjs-vite": "9.0.11",
    "@storybook/theming": "^8.6.14",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-storybook": "^9.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.53.0",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.7.9",
    "prettier-plugin-merge": "^0.7.4",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "storybook": "^9.0.11",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "vitest": "^3.2.3"
  },
  "postcss": {
    "plugins": {
      "@tailwindcss/postcss": {}
    }
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "bracketSameLine": true,
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-classnames",
      "prettier-plugin-merge"
    ],
    "tailwindStylesheet": "./src/assets/global.css",
    "customFunctions": [
      "tv",
      "twJoin",
      "twMerge"
    ]
  },
  "lintStaged": {
    "*.(j|t)s(x)?": [
      "prettier --cache --write",
      "eslint --fix --cache --max-warnings=0"
    ],
    "*.{html,json,md}": [
      "prettier --cache --write"
    ]
  }
}
